{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["./src/pages/*"],
      "@app/*": ["./src/app/*"],

      "@hooks/*": ["./src/common/hooks/*"],
      "@components/*": ["./src/common/components/*"],
      "@action/*": ["./src/redux/action/*"],
      "@config/*": ["./src/config/*"],
      "@helper/*": ["./src/helper/*"],
      "@modules/*": ["./src/modules/*"]
    }
  },
  "exclude": ["node_modules"]
}
